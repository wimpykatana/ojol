<?xml version='1.0' encoding='utf-8'?>
<widget id="com.digimasia.ojol" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ojol</name>
    <description>
        A sample ojol branching logic app
    </description>
    <author email="wimpy@digimasia.com" href="http://digimasia.com">
        CSA - Digima Asia
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device-motion" spec="^1.2.5" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.1.0" />
</widget>
